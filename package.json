{
    "name": "linga-windows",
    "private": true,
    "version": "1.0.0",
    "description": "An elegant English learning reader based on Electron.",
    "author": "User",
    "main": "dist-electron/main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && npm run build:electron && electron .\"",
        "build": "tsc && vite build && npm run build:electron && electron-builder",
        "build:electron": "tsc -p electron/tsconfig.json --skipLibCheck",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "vitest",
        "preview": "vite preview"
    },
    "build": {
        "appId": "com.esreader.app",
        "productName": "ESReader",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "resources",
                "to": ".",
                "filter": [
                    "dict.fst",
                    "dict.data.gz"
                ]
            },
            {
                "from": "cefr-core/pkg",
                "to": "cefr-core/pkg",
                "filter": [
                    "**/*"
                ]
            }
        ]
    },
    "dependencies": {
        "electron-squirrel-startup": "^1.0.1",
        "fs-extra": "^11.3.2",
        "@supabase/supabase-js": "^2.89.0",
        "axios": "^1.13.2"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "clsx": "^2.1.1",
        "epubjs": "^0.3.93",
        "lucide-react": "^0.561.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^7.10.1",
        "recharts": "^3.5.1",
        "tailwind-merge": "^3.4.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.22",
        "concurrently": "^8.2.2",
        "csv-parser": "^3.2.0",
        "electron": "^39.2.6",
        "electron-builder": "^24.13.3",
        "jsdom": "^27.3.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "tsx": "^4.21.0",
        "typescript": "^5.2.2",
        "vite": "^7.2.7",
        "vitest": "^4.0.15",
        "wait-on": "^7.2.0"
    }
}